// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  
  capital       UserCapital?
  clients       Client[]
  loans         Loan[]
  payments      Payment[]

  @@map("users")
}

model UserCapital {
  id             String   @id @default(cuid())
  userId         String   @unique @map("user_id")
  currentCapital Decimal  @default(0) @map("current_capital") @db.Decimal(15, 2)
  initialCapital Decimal  @default(0) @map("initial_capital") @db.Decimal(15, 2)
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("users_capital")
}

model Client {
  id             String   @id @default(cuid())
  userId         String   @map("user_id")
  name           String
  phoneNumber    String   @map("phone_number")
  address        String
  payageImageUrl String?  @map("payage_image_url")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  loans          Loan[]

  @@index([userId])
  @@map("clients")
}

model Loan {
  id                   String    @id @default(cuid())
  userId               String    @map("user_id")
  clientId             String    @map("client_id")
  principalAmount      Decimal   @map("principal_amount") @db.Decimal(15, 2)
  interestRate         Decimal   @map("interest_rate") @db.Decimal(5, 2)
  startDate            DateTime  @map("start_date") @db.Date
  paymentFrequencyDays Int       @default(30) @map("payment_frequency_days")
  status               String    @default("active")
  createdAt            DateTime  @default(now()) @map("created_at")
  updatedAt            DateTime  @updatedAt @map("updated_at")
  
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  client               Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  payments             Payment[]

  @@index([userId])
  @@index([clientId])
  @@map("loans")
}

model Payment {
  id             String    @id @default(cuid())
  userId         String    @map("user_id")
  loanId         String    @map("loan_id")
  paymentMonth   DateTime  @map("payment_month") @db.Date
  interestEarned Decimal   @map("interest_earned") @db.Decimal(15, 2)
  wasPaid        Boolean   @default(false) @map("was_paid")
  paymentDate    DateTime? @map("payment_date")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")
  
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  loan           Loan      @relation(fields: [loanId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([loanId])
  @@index([paymentMonth])
  @@map("payments")
}
